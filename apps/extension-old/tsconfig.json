{
	"extends": "plasmo/templates/tsconfig.base",
	"exclude": ["node_modules"],
	"include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx", "./**/*.svelte"],
	"compilerOptions": {
		"paths": {
			"$*": ["./*"],
			"@repo/ui/utils": ["../../packages/ui/src/lib/utils.ts"],
			"@repo/ui/shared": ["../../packages/ui/src/lib/components/shared/index.ts"],
			"@repo/ui/components/*": ["../../packages/ui/src/lib/components/ui/*/index.ts"],
			"@repo/ui/toasts": ["../../packages/ui/src/lib/components/toasts/index.ts"],
			"@repo/ui/icons": ["../../packages/ui/src/lib/icons/index.ts"],
			"@repo/services/services/*": ["../../packages/services/src/services/*.ts"],
			"@repo/services/implementations/*": ["../../packages/services/src/implementations/*/index.ts"]
		},
		"baseUrl": "."
	}
}
